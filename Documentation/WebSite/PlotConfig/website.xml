
<phedex>

  <import module="phedex.web"> WebHost, StaticContent, HelloWorld </import>
  <import file="$CONFIG_ROOT/text_queries.xml" />
  <import file="$CONFIG_ROOT/phedex_graphs.xml" />

  <class name="static" type="StaticContent">   
    <directory name="content"> $CONFIG_ROOT/static_content </directory>
  </class>

  <class name="test_case" type="HelloWorld" />

  <class name="web" type="WebHost">
    <mount location="/graphs" content="image/png"> <instance name="phedex_grapher"/> </mount>
    <mount location="/xml" content="text/xml"> <instance name="query_xml" /> </mount>
    <instance name="static" />
    <instance name="test_case" />
    <config>$CONFIG_ROOT/prod.conf</config>
  </class>

</phedex>

