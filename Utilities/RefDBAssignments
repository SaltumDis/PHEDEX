#!/usr/bin/env perl

BEGIN { use strict; use warnings;
  my $me = $0; $me =~ s|.*/||;
  my $home = $0; $home =~ s|/[^/]+$||; $home ||= ".";
  unshift(@INC, $home); }
use UtilsTR;

$verbose = 0;
if ($ARGV[0] eq '-v') {
    $verbose = 1; shift (@ARGV);
}

foreach my $dso (@ARGV) {
    my ($ds, $o) = ($dso =~ /(.*)\.(.*)/);
    my @assids = &listAssignments ($ds, $o);
    print "@assids", ($verbose ? " $ds.$o" : ""), "\n"
	if @assids;
}
