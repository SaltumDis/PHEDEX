#!/bin/sh

##H Generate transfer rate statistics for report card.
##H
##H Usage:
##H   MakeAllStats -dbconfig FILE
##H
##H -dbconfig  database connection configuration parameter file

for db in cms cmssg; do
  addopt=; [ $db = cms ] && addopt="-add Documentation/DailyStatsDiff.txt"
  for unit in hour day week month; do
    ./Utilities/MakeDailyStats ${1+"$@"} $(echo $addopt) -time $unit > $db-$unit.txt
  done
done
