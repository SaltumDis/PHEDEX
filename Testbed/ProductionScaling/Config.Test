### ENVIRON common
PHEDEX_BASE=/data/lat;
PHEDEX_CONF=$PHEDEX_BASE/SITECONF/CERN/PhEDEx;
PHEDEX_DBPARAM=$PHEDEX_CONF/DBParam:Validation;
PHEDEX_STATE=$PHEDEX_BASE/state;
PHEDEX_LOGS=$PHEDEX_BASE/logs;
PHEDEX_SCRIPTS=$PHEDEX_BASE/PHEDEX;
PHEDEX_STORAGE_MAP=$PHEDEX_SCRIPTS/Testbed/ProductionScaling/storage.xml;

source /data/tim/tools/oraenv.sh;
source /data/tim/tools/perlenv.sh;

### AGENT LABEL=mgmt-blockmon PROGRAM=Toolkit/Workflow/BlockMonitor
 -db          ${PHEDEX_DBPARAM}
 -node        T1_CERN_Buffer

### AGENT LABEL=mgmt-blockalloc PROGRAM=Toolkit/Workflow/BlockAllocator
 -db          ${PHEDEX_DBPARAM}
 -node        T1_CERN_Buffer

### AGENT LABEL=mgmt-blockactiv PROGRAM=Toolkit/Workflow/BlockActivate
 -db          ${PHEDEX_DBPARAM}
 -node        T1_CERN_Buffer

### AGENT LABEL=mgmt-blockdeact PROGRAM=Toolkit/Workflow/BlockDeactivate
 -db          ${PHEDEX_DBPARAM}
 -node        T1_CERN_Buffer

### AGENT LABEL=info-pm PROGRAM=Toolkit/Monitoring/PerfMonitor
 -db          ${PHEDEX_DBPARAM}
 -node        T1_CERN_Buffer

### AGENT LABEL=info-tc PROGRAM=Toolkit/Monitoring/InfoStatesClean
 -db          ${PHEDEX_DBPARAM}
 -node        T1_CERN_Buffer

### AGENT LABEL=info-fs PROGRAM=Toolkit/Monitoring/InfoFileSize
 -db          ${PHEDEX_DBPARAM}
 -node        T1_CERN_Buffer

### AGENT LABEL=info-ds PROGRAM=Toolkit/Monitoring/InfoDropStatus
 -db          ${PHEDEX_DBPARAM}
 -node	      T1_CERN_Buffer
 -site        All
 -dir         ${PHEDEX_STATE}

### AGENT LABEL=mgmt-router PROGRAM=Toolkit/Infrastructure/FileRouter
 -db          ${PHEDEX_DBPARAM}
 -nodes       '%'

### AGENT LABEL=xfer PROGRAM=Toolkit/Transfer/FileDownload NICE=+3
 -db          ${PHEDEX_DBPARAM}
 -nodes       '%'
 -storagemap  ${PHEDEX_STORAGE_MAP}
 -backend     Null

### AGENT LABEL=pfn PROGRAM=Toolkit/Transfer/FilePFNExport
 -db          ${PHEDEX_DBPARAM}
 -nodes       '%'
 -storagemap  ${PHEDEX_STORAGE_MAP}
 -protocols   srm

### AGENT LABEL=export-t1 PROGRAM=Toolkit/Transfer/FileDiskExport NICE=+3
 -db          ${PHEDEX_DBPARAM}
 -nodes       'T1%'

### AGENT LABEL=export-t2 PROGRAM=Toolkit/Transfer/FileDiskExport NICE=+3
 -db          ${PHEDEX_DBPARAM}
 -nodes       'T2%'

### AGENT LABEL=export-t3 PROGRAM=Toolkit/Transfer/FileDiskExport NICE=+3
 -db          ${PHEDEX_DBPARAM}
 -nodes       'T3%,TX%,TV%'
