#!/bin/sh

# Pick up arguments
reason="$1" pfn="$2"

# Handle removal.  We ony remove the file on post-transfer error to
# avoid the overhead on every transfer, most of which don't need
# the file deletion.
case $reason in
  pre )
   ;; # ignore, only delete if we have a real error
  post )
   srm-advisory-delete -retry_num=0 "$pfn" 2>/dev/null
   ;;
  * ) echo "unrecognised reason to remove $pfn: $reason" 1>&2; exit 1;;
esac

exit 0
